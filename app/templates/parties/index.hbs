<h2>
  Les partie du mois de {{month}}
  <small>
  ( {{ parties_count }} parties /
  {{#with controllers.playedGames as games}}
    {{ games.games_count}} jeux )
  {{/with}}
  </small>
</h2>
<div class="container-fluid">
  <div class="col-md-9">
    <table class="table table-bordered">
      <tbody>
      {{#each week in weeks}}
        <tr>
          {{#each day in week}}
            <td>
              {{ formatDateWith day "dd D" }} : {{day.parties.length}} partie
              <ul>
                {{#each p in day.parties }}
                  <li>{{p.game.name}}</li>
                  {{log g}}
                {{/each}}
              </ul>
            </td>
          {{/each}}
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    {{#with controllers.playedGames as games}}
    <ul>
      {{#each game in games.played}}
        <li>{{game.name}}</li>
      {{/each}}
    </ul>
    {{/with}}
  </div>
</div>
